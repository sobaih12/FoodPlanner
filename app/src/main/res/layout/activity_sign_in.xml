<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn.View.SignInActivity">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="260dp"
        android:layout_height="200dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="112dp"
        android:background="@drawable/_c9r54t1pm01zxgn1fohzcar6qp"
        app:layout_constraintBottom_toTopOf="@+id/password_text_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/signup_link_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:text="SignUp"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/google_botton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_text_layout" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/user_name_text_layout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:hint="Enter Your Email ..."
        android:textColorHint="@color/colorBlue"
        app:layout_constraintBottom_toTopOf="@+id/password_text_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/user_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorBlue"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_text_layout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="91dp"
        android:hint="Enter Your Password ..."
        android:textColorHint="@color/colorBlue"
        app:layout_constraintBottom_toTopOf="@+id/signup_link_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@color/colorBlue" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/signin_in_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Sign In"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/signup_link_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_text_layout" />

    <Button
        android:id="@+id/google_botton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="18dp"
        android:text="Google Sign In"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/guest_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_link_button" />

    <Button
        android:id="@+id/guest_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="67dp"
        android:text="Guest Mode"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/google_botton" />

</androidx.constraintlayout.widget.ConstraintLayout>
