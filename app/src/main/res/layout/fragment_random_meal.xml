<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage.RandomMealFragment.View.RandomMealFragmentView" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="1000dp">



        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/meal_image_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:alpha="0.8"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background"
            android:tint="@color/black"
            app:riv_border_color="@color/black"
            app:riv_corner_radius="20dp"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            app:layout_constraintTop_toTopOf="@id/meal_name_text_view_2"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            tools:layout_editor_absoluteY="43dp" />


        <TextView
            android:id="@+id/meal_name_text_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            />

        <ImageView
            android:id="@+id/calendar_meal_image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/calender_border"
            app:layout_constraintTop_toTopOf="@id/meal_image_view"
            app:layout_constraintLeft_toLeftOf="@id/meal_image_view" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/favorite_meal_image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="124dp"
            android:src="@drawable/favorite_border"
            app:layout_constraintRight_toRightOf="@id/meal_image_view"
            app:layout_constraintTop_toTopOf="@id/meal_image_view" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/added_to_favorite"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="124dp"
            android:src="@drawable/favorite_icon"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="@id/meal_image_view"
            app:layout_constraintTop_toTopOf="@id/meal_image_view" />

        <TextView
            android:id="@+id/meal_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Meal Name"
            android:maxWidth="300dp"
            android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="@id/meal_image_view"
            app:layout_constraintEnd_toEndOf="@id/meal_image_view"
            app:layout_constraintTop_toTopOf="@id/meal_image_view"
            app:layout_constraintBottom_toBottomOf="@id/meal_image_view"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:layout_editor_absoluteY="113dp" />

        <TextView
            android:id="@+id/country_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="country"
            android:background="@drawable/background_shadow"
            app:layout_constraintTop_toBottomOf="@id/meal_name_text_view"
            app:layout_constraintStart_toStartOf="@id/meal_name_text_view"
            app:layout_constraintEnd_toEndOf="@id/meal_name_text_view"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="125dp"
            tools:layout_editor_absoluteY="323dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ingredients_recycler_view"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.0"

            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/ingredients_text_view" />

        <TextView
            android:id="@+id/ingredients_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/meal_image_view"
            android:layout_marginTop="20dp"
            android:textSize="24dp"
            android:textStyle="bold" />



        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="20dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="24dp"
            app:layout_constraintStart_toStartOf="@+id/ingredients_text_view"
            app:layout_constraintTop_toBottomOf="@+id/ingredients_recycler_view" />

        <TextView
            android:id="@+id/description_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textSize="16dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/description_text_view"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/watch_video_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watch Video"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/barrier"
            android:layout_marginTop="20dp"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="18dp"
            tools:layout_editor_absoluteY="945dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/youtube_player_view" />

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/youtube_player_view"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:autoPlay="false"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/watch_video_text" />



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>