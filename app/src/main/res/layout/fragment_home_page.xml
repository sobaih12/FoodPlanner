<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage.HomeFragment.View.HomePageFragment" >

    <TextView
        android:id="@+id/daily_meal_text_view"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Daily Meal"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"

        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="34dp" />

    <TextView
        android:id="@+id/category_text_view"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Category"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/random_image_view"
        android:layout_marginTop="20dp"

        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="34dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/category_recycler"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="@id/random_image_view"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="@id/random_image_view"
        app:layout_constraintTop_toBottomOf="@+id/category_text_view" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/random_image_view"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_launcher_background"
        android:tint="@color/black"
        app:riv_corner_radius="20dp"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"
        android:alpha="0.8"
        android:outlineSpotShadowColor="@color/black"
        android:outlineAmbientShadowColor="@color/black"
        app:riv_border_color="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/daily_meal_text_view"
        app:layout_constraintTop_toBottomOf="@id/daily_meal_text_view"
        />

    <TextView
        android:id="@+id/random_text_view"
        android:shadowRadius="20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:maxLines="1"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/random_image_view"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@id/random_image_view"
        android:layout_marginBottom="16dp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="196dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
