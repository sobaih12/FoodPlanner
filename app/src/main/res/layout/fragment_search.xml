<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage.SearchFragment.SearchByNameView.View.SearchFragment">

    <RadioGroup
        android:id="@+id/chip_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:checkedButton="@+id/chip_category"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/chip_category"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/chip_area"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:text="Area"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/chip_ingredient"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:text="Ingredient"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/chip_meal"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:text="Meal"
            android:textAlignment="center" />
    </RadioGroup>

    <EditText
        android:id="@+id/search_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/chip_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/search_recycler_view" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_text" />

</androidx.constraintlayout.widget.ConstraintLayout>
