<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homePageFragment">

    <fragment
        android:id="@+id/calenderFragment"
        android:name="com.example.comedo.HomePage.CalenderFragment.CalendarFragment"
        android:label="fragment_calender"
        tools:layout="@layout/fragment_calender" />
    <fragment
        android:id="@+id/homePageFragment"
        android:name="com.example.comedo.HomePage.HomeFragment.View.HomePageFragment"
        android:label="fragment_home_page"
        tools:layout="@layout/fragment_home_page" >
        <action
            android:id="@+id/action_homePageFragment_to_randomMealFragment"
            app:destination="@id/randomMealFragment" />
        <action
            android:id="@+id/action_homePageFragment_to_searchByCategoryView"
            app:destination="@id/searchByCategoryView" />
        <action
            android:id="@+id/action_homePageFragment_to_searchByAreaView"
            app:destination="@id/searchByAreaView" />
        <action
            android:id="@+id/action_homePageFragment_to_searchByIngredientsView"
            app:destination="@id/searchByIngredientsView" />
    </fragment>
    <fragment
        android:id="@+id/favouriteFragment"
        android:name="com.example.comedo.HomePage.FavoriteFragment.View.FavoriteFragment"
        android:label="fragment_favourite"
        tools:layout="@layout/fragment_favourite" >
        <action
            android:id="@+id/action_favouriteFragment_to_randomMealFragment"
            app:destination="@id/randomMealFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.comedo.HomePage.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.comedo.HomePage.SearchFragment.SearchByNameView.View.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_randomMealFragment"
            app:destination="@id/randomMealFragment" />
    </fragment>
    <fragment
        android:id="@+id/randomMealFragment"
        android:name="com.example.comedo.HomePage.RandomMealFragment.View.RandomMealFragmentView"
        android:label="fragment_random_meal"
        tools:layout="@layout/fragment_random_meal" >
        <argument
            android:name="mealData"
            app:argType="com.example.comedo.Models.MealModel" />
    </fragment>
    <fragment
        android:id="@+id/searchByCategoryView"
        android:name="com.example.comedo.HomePage.SearchFragment.SearchByCategory.View.SearchByCategoryView"
        android:label="fragment_search_by_category_view"
        tools:layout="@layout/fragment_search_by_category_view" >
        <argument
            android:name="categoryName"
            app:argType="string" />
        <action
            android:id="@+id/action_searchByCategoryView_to_randomMealFragment"
            app:destination="@id/randomMealFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchByAreaView"
        android:name="com.example.comedo.HomePage.SearchFragment.SearchByArea.View.SearchByAreaView"
        android:label="fragment_search_by_area_view"
        tools:layout="@layout/fragment_search_by_area_view" >
        <argument
            android:name="areaName"
            app:argType="string" />
        <action
            android:id="@+id/action_searchByAreaView_to_randomMealFragment"
            app:destination="@id/randomMealFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchByIngredientsView"
        android:name="com.example.comedo.HomePage.SearchFragment.SearchByIngredients.View.SearchByIngredientsView"
        android:label="fragment_search_by_ingredients_view"
        tools:layout="@layout/fragment_search_by_ingredients_view" >
        <action
            android:id="@+id/action_searchByIngredientsView_to_randomMealFragment"
            app:destination="@id/randomMealFragment" />
        <argument
            android:name="ingredientName"
            app:argType="string" />
    </fragment>
</navigation>