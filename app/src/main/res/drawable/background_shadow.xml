<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#8F9095" /> <!-- Shadow color -->
            <corners android:radius="10dp" /> <!-- Adjust the corner radius as needed -->
        </shape>
    </item>

    <!-- Content layer -->
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#8F9095" /> <!-- Set the background color of the TextView -->
            <corners android:radius="10dp" /> <!-- Adjust the corner radius as needed -->
        </shape>
    </item>
</layer-list>
